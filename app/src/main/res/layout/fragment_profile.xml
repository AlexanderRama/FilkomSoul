<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="?colorSecondaryContainer">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="360dp"
        android:layout_height="112dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/cardcreamlight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/profilenav" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/cardcreamlight"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/intersemibold"
                android:maxLines="1"
                android:textColor="?colorOnSecondary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/nim"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/intermedium"
                android:maxLines="1"
                android:textColor="?colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/major"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:fontFamily="@font/intermedium"
                android:textColor="?colorPrimary"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn1"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:background="@drawable/cardbluelight"
        android:orientation="horizontal"
        android:layout_marginTop="56dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/cardnavy"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/language" />
        </LinearLayout>

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/interregular"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:text="@string/profilebtn1"
            android:textColor="?colorOnSecondary"
            android:textSize="22sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/round_arrow_back_ios_new_24"
                android:rotation="180"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn2"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:background="@drawable/cardbluelight"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1">

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/cardnavy"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/history" />
        </LinearLayout>

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/interregular"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:text="@string/profilebtn2"
            android:textColor="?colorOnSecondary"
            android:textSize="22sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/round_arrow_back_ios_new_24"
            android:rotation="180"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn3"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:background="@drawable/cardbluelight"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2">

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/cardnavy"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/information" />
        </LinearLayout>

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/interregular"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:text="@string/profilebtn3"
            android:textColor="?colorOnSecondary"
            android:textSize="22sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/round_arrow_back_ios_new_24"
            android:rotation="180"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>