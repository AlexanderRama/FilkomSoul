<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Filkomsoul" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sorange</item>
        <item name="colorPrimaryVariant">@color/pblue</item>
        <item name="colorOnPrimary">@color/pbluelight</item>
        <item name="colorPrimaryContainer">@color/pnavy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/scream</item>
        <item name="colorSecondaryVariant">@color/screamlight</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/scream</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="InactiveText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/backgroundpop</item>
    </style>

    <attr name="colorPrimary" format="color"/>
    <attr name="colorPrimaryVariant" format="color"/>
    <attr name="colorOnPrimary" format="color"/>
    <attr name="colorPrimaryContainer" format="color"/>
    <attr name="colorSecondary" format="color"/>
    <attr name="colorSecondaryVariant" format="color"/>
    <attr name="colorOnSecondary" format="color"/>
    <attr name="colorSecondaryContainer" format="color"/>
</resources>

